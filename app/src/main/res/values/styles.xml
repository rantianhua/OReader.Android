<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="article_list_style">
        <item name="android:background">#00000000</item>
        <item name="android:listSelector">@drawable/transparent_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dp</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="item_image">
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="item_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4.0dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:text">@string/test</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/item_text</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">10.0dp</item>
        <item name="android:layout_height">1.0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="detail_title_bar_style" parent="@style/title_bar_style">
        <item name="android:background">@drawable/detail_bg_titlebar</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="detail_back_view" parent="@style/back_view">
        <!--<item name="android:background">@drawable/transparent</item>-->
        <item name="android:drawableLeft">@drawable/btn_back</item>
    </style>
    <style name="back_view" parent="@style/title_bar_button">
        <item name="android:gravity">right|center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingLeft">8.0dp</item>
        <item name="android:paddingRight">0.0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.0dp</item>
        <item name="android:layout_marginRight">0.0dp</item>
        <item name="android:minHeight">36.0dp</item>
        <item name="android:text">"  "</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:drawablePadding">0.0dp</item>
    </style>
    <style name="title_bar_button" parent="@style/common_button">
        <item name="android:textSize">16.0dp</item>
        <item name="android:textColor">@color/btn_common_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0.0dp</item>
        <item name="android:paddingRight">6.0dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="common_button" parent="@style/text_on_button">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:paddingLeft">6.0dp</item>
        <item name="android:paddingRight">6.0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">50.0dp</item>
        <item name="android:minHeight">30.0dp</item>
    </style>
    <style name="text_on_button">
        <item name="android:textSize">15.0dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowRadius">0.0</item>
    </style>


    <style name="deail_title_text_style">
        <item name="android:textColor">@color/detail_title_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="title_bar_shadow">
        <item name="android:background">@drawable/title_bar_shadow</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/shadow_height</item>
    </style>

    <style name="item_description">
        <item name="android:textSize">12.5dp</item>
        <item name="android:textColor">@color/item_description</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginRight">4.0dp</item>
    </style>

    <style name="item_secondary_text">
        <item name="android:textSize">14.0dp</item>
        <item name="android:textColor">@color/create_time</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0dp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mine_item_divider">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">20.0dp</item>
    </style>

    <style name="mine_item_text">
        <item name="android:textSize">14.0dp</item>
        <item name="android:textColor">@color/mine_item_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">16.0dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="mine_item">
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/mine_item_bg</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44.0dp</item>
    </style>

    <style name="mine_arrow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">15.0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/mine_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="mine_item_line">
        <item name="android:background">@color/mine_item_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="mine_btn_line" parent="@style/mine_item_line">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="tool_item_text" parent="mine_item_text">
        <item name="android:drawableTop">@drawable/fav</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">-3dp</item>
    </style>
    <style name="tool_item_text_selected" parent="mine_item_text">
        <item name="android:drawableTop">@drawable/fav_selected</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="nav_title_bar_style" parent="@style/title_bar_style">
        <item name="android:layout_height">50.0dp</item>
        <item name="android:background">@color/tab_backgroud</item>
    </style>
</resources>
