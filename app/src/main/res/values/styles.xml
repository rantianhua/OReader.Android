<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="article_list_style">
        <item name="android:background">#00000000</item>
        <item name="android:listSelector">@drawable/transparent_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dp</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="item_image">
        <item name="android:background">@drawable/small_image_holder_listpage</item>
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/item_text</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">10.dp</item>
        <item name="android:layout_height">1.0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
